{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",

    "declaration": true,
    "declarationMap": true,

    "composite": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
