{
  "version": "2.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/configure/*",
    "packages/math/*"
  ],
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--frozen-lockfile"
      ]
    },
    "publish": {
      "access": "public"
    },
    "version": {
      "allowBranch": "master"
    }
  },
  "loglevel": "verbose"
}
